<%- include('partials/header', {title: 'Sign-Up'}) %>

<main class="form-container">
  <% if (errors && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(function(error) { %>
        <li class="error-message"><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/sign-up" method="POST" class="signup-form">
    <div class="form-group">
      <label for="forename">Forename:</label>
      <input type="text" name="forename" value="<%= user ? user.forename : '' %>" class="form-input" required>
    </div>
    
    <div class="form-group">
      <label for="surname">Surname:</label>
      <input type="text" name="surname" value="<%= user ? user.surname : '' %>" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" name="email" value="<%= user ? user.email : '' %>" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" name="password" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="pass-confirm">Confirm Password:</label>
      <input type="password" name="pass-confirm" class="form-input" required>
    </div>

    <button type="submit" class="form-button">Sign Up</button>
  </form>

  <span class="log-in-link">Already have an account? <a href="/login">Login here</a></span>
</main>

<%- include('partials/footer') %>
